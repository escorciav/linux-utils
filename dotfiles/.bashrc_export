# Format history
export  HISTTIMEFORMAT="%d/%m/%y  %T  "

# Avoid Gtk-WARNING **: cannot open display
unset SSH_ASKPASS

# User specific environment
export PATH=$HOME/.local/bin:$HOME/local/bin:$PATH
export LD_LIBRARY_PATH=/usr/local/lib:$HOME/local/lib:$LD_LIBRARY_PATH
export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:$HOME/local/lib:$PKG_CONFIG_PATH

# GIT
# Uncomment the following line if you have vimx
#export GIT_EDITOR=vimx

# CUDA
# Using modules uncomment the following line
#module load compilers/cuda/6.5
# Hard-coding style uncomment the following lines
#export PATH=/opt/cuda-5.5/bin:$PATH
#export LD_LIBRARY_PATH=/opt/cuda-5.5/lib64:$LD_LIBRARY_PATH

# CUDNN-v2
module load tools/cudnn/v2
#export LD_LIBRARY_PATH=/opt/cuda/cudnn-6.5-v2:$LD_LIBRARY_PATH

# PYTHON
export PYTHONPATH="/usr/local/lib/python2.7:"\
"/usr/local/lib/python2.7/site-packages"

# OPENBLAS
# Uncomment following lines to setup max number of threads by default
export OPENBLAS_NUM_THREADS=48
export GOTO_NUM_THREADS=48
export OMP_NUM_THREADS=48

