proc ModulesHelp { } {
                global version modroot

                        puts stderr "compilers/cuda/6.5 - sets the Environment for CUDA 6.5"
}

module-whatis   "Sets the Environment for using CUDA 6.5 compiler and libraries"

# for Tcl script use only
set     topdir          /opt/cuda/6.5
set     version         6.5
set     sys             linux86
conflict compilers/cuda

setenv          CUDADIR         $topdir
prepend-path    PATH            $topdir/bin
prepend-path    LD_LIBRARY_PATH $topdir/lib64
prepend-path    INCDIR          $topdir/include
prepend-path    INCLUDE         $topdir/include
