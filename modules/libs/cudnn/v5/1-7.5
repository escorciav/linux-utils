proc ModulesHelp { } {
  global version modroot
  puts stderr "libs/cudnn/v5/1-7.5 - sets the Environment for CUDNN v5.1"
}

module-whatis "Sets the Environment for using CUDNN v5.1 - CUDA 7.5 headers and library"

# for Tcl script use only
set     topdir          $::env(HOME)/install/bin/cudnn/v5.1/7.5
set     version         v5.1-7.5
set     sys             linux86
conflict libs/cudnn
prereq compilers/cuda/7.5

prepend-path    LD_LIBRARY_PATH $topdir/lib64
prepend-path    LIBRARY_PATH    $topdir/lib64
prepend-path    INCDIR          $topdir/include
prepend-path    INCLUDE         $topdir/include
prepend-path    CPATH           $topdir/include
